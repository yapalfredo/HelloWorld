<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorld.StackLayout2"
             Padding="0">
  
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments ="Thickness"
                    iOS="0,50,0,0"/>
    </ContentPage.Padding>

    <ContentPage.Content>
        <StackLayout Padding="0,20,0,0">
            <Label Text="nyc_photographer" Margin="10"
                VerticalOptions="Start"
                 />
            <Image Source="http://lorempixel.com/1920/1080/nature/3/" />
            <StackLayout Orientation="Horizontal" Padding="10">
                <Label Text="Like" TextColor="#008ECC" />
                <Label Text="Comment" TextColor="#008ECC" />
                <Label Text="Share" TextColor="#008ECC" />
            </StackLayout>
            <StackLayout Padding="10">
                <BoxView Color="#f0f0f0" HeightRequest="1"/>
                <Label Text="700 likes" FontAttributes="Bold" TextColor="Gray"/>
                <Label Text="This is a shot yesterday in Shaknor, Sweden, when driving home, from a couple of days of work in Denmark." FontSize="Default"
                       HorizontalTextAlignment="Start"/>
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>